<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="/public/css/global.css" />
  <link rel="stylesheet" href="/public/css/main.css" />
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WebtoonPop</title>
</head>

<body>
  <!-- 헤더 -->
  <%- include("header") -%>

    <div class="mainwrap">
      <main class="menu">
        <% data.forEach((x)=>{ %>
          <div id="<%= x.id %>" class="box">
            <div class="imgwrap">
              <div class="imgbox"><img class="imgs" src="<%= x.mainurl %>" alt="프로필이미지" /></div>
            </div>
            <div class="textbox">
              <div class="textflex">
                <div class="testname testname${x.id}">
                  <%= x.name %>
                </div>
                <div class="testprice testprice${x.id}">웹툰/만화 작가</div>
              </div>
              <div class="happy happy${x.id}"><img class="happyimg happyimg${x.id}" src="" alt="" /></div>
            </div>
          </div>
          <% }) %>

      </main>
      <div class="flexbox"></div>

      <!-- 푸터 -->
      <%- include("footer") -%>
    </div>
</body>
<script src="/public/js/main.js"></script>

</html>